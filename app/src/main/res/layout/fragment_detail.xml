<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:scrollbars="none">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/app_background"
            android:padding="16dp">

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Detailed"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"/>

            <!-- Tab Selector -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="24dp">

                <TextView
                    android:id="@+id/tabDay"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Day"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:layout_marginEnd="4dp"/>

                <TextView
                    android:id="@+id/tabWeek"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Week"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:layout_marginEnd="4dp"/>

                <TextView
                    android:id="@+id/tabMonth"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Month"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@drawable/button_background"
                    android:textSize="14sp"
                    android:layout_marginEnd="4dp"/>

                <TextView
                    android:id="@+id/tabYear"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Year"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="14sp"/>

            </LinearLayout>

            <!-- Usage Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="1.189"
                    android:textColor="@color/white"
                    android:textSize="32sp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="All Usage ▼"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:padding="8dp"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="gallons"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:alpha="0.7"
                android:layout_marginBottom="16dp"/>

            <!-- Bar Chart Placeholder -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="#2C2C2C"
                android:padding="8dp">

                <!-- You'll use MPAndroidChart here -->
<!--                <com.github.mikephil.charting.charts.BarChart-->
<!--                    android:id="@+id/barChart"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="match_parent"/>-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="There's supposed to be a chart here, but with the time i had left. i abandoned it"
                    android:gravity="center"/>

            </FrameLayout>

        </LinearLayout>

        <!-- This Month Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="This Month"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"/>

            <!-- Pie Chart + Legend Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp">

                <!-- Legend -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginEnd="16dp">

                    <!-- Dishwasher -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <View
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:background="#2196F3"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dishwasher"
                            android:textColor="@android:color/black"
                            android:textSize="14sp"
                            android:layout_marginStart="8dp"/>

                    </LinearLayout>

                    <!-- Sink -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <View
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:background="#4CAF50"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sink"
                            android:textColor="@android:color/black"
                            android:textSize="14sp"
                            android:layout_marginStart="8dp"/>

                    </LinearLayout>

                    <!-- Refrigerator -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <View
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:background="#FF9800"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Refrigerator"
                            android:textColor="@android:color/black"
                            android:textSize="14sp"
                            android:layout_marginStart="8dp"/>

                    </LinearLayout>

                    <!-- Bathtub -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <View
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:background="#9C27B0"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bathtub"
                            android:textColor="@android:color/black"
                            android:textSize="14sp"
                            android:layout_marginStart="8dp"/>

                    </LinearLayout>

                    <!-- Fridge -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <View
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:background="#FFEB3B"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Fridge"
                            android:textColor="@android:color/black"
                            android:textSize="14sp"
                            android:layout_marginStart="8dp"/>

                    </LinearLayout>

                    <!-- Shower -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <View
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:background="#E91E63"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Shower"
                            android:textColor="@android:color/black"
                            android:textSize="14sp"
                            android:layout_marginStart="8dp"/>

                    </LinearLayout>

                    <!-- Other -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <View
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:background="#9E9E9E"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Other"
                            android:textColor="@android:color/black"
                            android:textSize="14sp"
                            android:layout_marginStart="8dp"/>

                    </LinearLayout>

                </LinearLayout>

                <!-- Pie Chart -->
                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="180dp"
                    android:layout_weight="1">

<!--                    <com.github.mikephil.charting.charts.PieChart-->
<!--                        android:id="@+id/pieChart"-->
<!--                        android:layout_width="match_parent"-->
<!--                        android:layout_height="match_parent"/>-->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Same thing, i abandoned the chart in here"
                        android:gravity="center"/>

                </FrameLayout>

            </LinearLayout>

            <!-- Detailed Usage Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Detailed Usage"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=">"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"/>

            </LinearLayout>

            <!-- Dishwasher Usage -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="12dp"
                android:background="#F5F5F5"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/dishwasher"
                    android:background="#2196F3"
                    android:padding="8dp"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dishwasher"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:textStyle="bold"/>

                    <ProgressBar
                        android:layout_width="match_parent"
                        android:layout_height="4dp"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:progress="30"
                        android:progressTint="#2196F3"
                        android:layout_marginTop="4dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="end"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="19 gal."
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3% ↓"
                        android:textColor="#4CAF50"
                        android:textSize="12sp"/>

                </LinearLayout>

            </LinearLayout>

            <!-- Sink Usage -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="12dp"
                android:background="#F5F5F5"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/sink"
                    android:background="#4CAF50"
                    android:padding="8dp"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sink"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:textStyle="bold"/>

                    <ProgressBar
                        android:layout_width="match_parent"
                        android:layout_height="4dp"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:progress="10"
                        android:progressTint="#4CAF50"
                        android:layout_marginTop="4dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="end"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5 gal."
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5% ↑"
                        android:textColor="#F44336"
                        android:textSize="12sp"/>

                </LinearLayout>

            </LinearLayout>

            <!-- Refrigerator Usage -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="12dp"
                android:background="#F5F5F5">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/fridge"
                    android:background="#FF9800"
                    android:padding="8dp"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Refrigerator"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:textStyle="bold"/>

                    <ProgressBar
                        android:layout_width="match_parent"
                        android:layout_height="4dp"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:progress="20"
                        android:progressTint="#FF9800"
                        android:layout_marginTop="4dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="end"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12 gal."
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="9% ↑"
                        android:textColor="#F44336"
                        android:textSize="12sp"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>